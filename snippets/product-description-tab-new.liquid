<!-- video-popup-code-starting -->
<div class="split-popup">
  <div class="modal-wrap">
    <div class="modal-body">
      <div class="modal-content">
        <a href="javascript:;" class="modal-close">&#10006;</a>
        <div class="popup-product-box">
          <iframe loading="lazy" allow="accelerometer;  clipboard-write; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen="" frameborder="0" height="315" id="video-popup" data-source="https://player.vimeo.com/video/431963427" title="video player" width="100%">
</iframe>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="split-overlay"></div>
<!-- video-popup-code-ending -->

<script>
  //  video-popup-code-script-starting
  $(document).ready(function () {
    $('.size-popup').on('click', function (){
      $("#video-popup")[0].src +=  "?autoplay=1";
      $(".split-popup").addClass('modal-visible');
      $(".split-overlay").addClass('modal-visible');
      $('body').css({"overflow":"hidden"});
    });
    $('.modal-close').on('click', function (){
      $("iframe").each(function() { 
        var src = $("#video-popup")[0].src.replace("?autoplay=1", "");
        $(this).attr('src',src);  
      });
      $(".split-overlay").removeClass('modal-visible');
      $(".split-popup").removeClass('modal-visible');
      $('body').css({"overflow":"auto"});

    });
  });

  // Close popup by click outside
  $(document).click(function(event) {
    if($(event.target).attr('class') == "modal-body"){
      $("iframe").each(function() { 
        var src = $("#video-popup")[0].src.replace("?autoplay=1", "");
        $(this).attr('src',src);  
      });
      $(".split-popup").removeClass('modal-visible');
      $(".split-overlay").removeClass('modal-visible');
      $('body').css({"overflow":"auto"});
    }
  });
  //  video-popup-code-script-ending

</script>
