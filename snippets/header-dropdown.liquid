{%- comment %}

  Header Dropdown
  ------------------------------------------------------------------------------

  Usage:

  {% include 'header-dropdown',
              dropdown_id: { string } - required
              dropdown_content: { string } - optional
              alt_template: { boolean } - optional (defaults to false)
  %}

{% endcomment -%}

{% if dropdown_content != blank %}

  <div id="{{ dropdown_id }}" class="header-dropdown {% if alt_template == true %}dropdown--alt{% endif %}">
    <div class="header-container">
      {{ dropdown_content }}
    </div>
  </div>

{% endif %}