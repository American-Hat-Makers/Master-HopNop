{% if product.metafields.custom_fields["ig_background"] != blank %}
  <div class="custom-field custom-field__ig-background custom-field__type--image">
    <h3 class="custom-field--title">Background</h3>
    <div class="custom-field--value">  
      {% render 'cf-image' with image: product.metafields.custom_fields["ig_background"], print: 'url' %}
    </div>
  </div>
{% endif %}