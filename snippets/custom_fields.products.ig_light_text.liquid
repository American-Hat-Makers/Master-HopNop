{% if product.metafields.custom_fields["ig_light_text"] != blank %}
  <div class="custom-field custom-field__ig-light-text custom-field__type--checkbox">
    <h3 class="custom-field--title">Light text</h3>
    <div class="custom-field--value">
      {% if product.metafields.custom_fields["ig_light_text"] == 1 %}
        TRUE
      {% else %}
        FALSE
      {% endif %}
    </div>
  </div>
{% endif %}