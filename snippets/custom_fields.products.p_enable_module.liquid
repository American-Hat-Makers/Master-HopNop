{% if product.metafields.custom_fields["p_enable_module"] != blank %}
  <div class="custom-field custom-field__p-enable-module custom-field__type--checkbox">
    <h3 class="custom-field--title">Enable Module</h3>
    <div class="custom-field--value">
      {% if product.metafields.custom_fields["p_enable_module"] == 1 %}
        TRUE
      {% else %}
        FALSE
      {% endif %}
    </div>
  </div>
{% endif %}