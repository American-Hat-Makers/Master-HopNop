<ul class="header-nav__menu header-nav__menu--user">
  <li class="header-nav__menu-item desk-search-hide">
    <div class="search-container" data-search-container>
      <form action="/search" method="get" role="search">
        <input type="hidden" name="type" value="product,article" />
        <div class="minimal-input-box">
          <input type="search" name="q" placeholder="{{ 'general.search.placeholder' | t }}" aria-label="{{ 'general.search.placeholder' | t }}" class="minimal-input-box__input" data-search-input/>
          <button type="submit" class="minimal-input-box__submit" data-search-submit>
            {% include 'icon-search' %}
            <span class="icon-fallback-text">{{ 'general.search.submit' | t }}</span>
          </button>
        </div>
      </form>
    </div>

    <a href="#" data-toggle-search>
      {% include 'icon-search' %}
      <span class="icon-fallback-text">{{ 'general.search.submit' | t }}</span>
    </a>
  </li>
  {% if shop.customer_accounts_enabled %}
    <li class="header-nav__menu-item">
      {% if customer %}
        <a href="/account" title="Account">
          {% include 'icon-account' %}
          <span class="icon-fallback-text">{{ 'layout.customer.account' | t }}</span>
        </a>
      {% else %}
        <a href="/account/login" title="Login or register">
          {% include 'icon-account' %}
          <span class="icon-fallback-text">{{ 'layout.customer.account' | t }}</span>
        </a>
      {% endif %}
    </li>
  {% endif %}
  <li class="header-nav__menu-item">
    <a href="/cart" data-ajax-cart-trigger>
      <div class="header-cart__badge{% if cart.item_count > 0 %} has-items{% endif %}" data-cart-badge>
        {% include 'icon-bag' %}
        <span class="header-cart__badge-count" data-cart-badge-count>{{ cart.item_count }}</span>
      </div>
    </a>
  </li>
</ul>
