{% include 'style-grid'
           sg_id: section.id,
           sg_eyebrow: section.settings.eyebrow,
           sg_title: section.settings.title,
           sg_text: section.settings.text,
           sg_background_image: section.settings.background_image,
           sg_blocks: section.blocks
 %}

{% schema %}
{
  "name": "Style Grid",
  "class": "style-grid",
  "max_blocks": 20,
  "settings": [
    {
      "type": "text",
      "id": "eyebrow",
      "label": "Eyebrow"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Title"
    },
    {
      "type": "richtext",
      "id": "text",
      "label": "Text"
    },
    {
      "type": "image_picker",
      "id": "background_image",
      "label": "Background Image"
    }
  ],
  "blocks": [
    {
      "type": "grid-item",
      "name": "Style",
      "settings": [
        {
          "type": "text",
          "id": "style",
          "label": "Style",
          "default": "style"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Style Grid",
      "category": "Misc",
      "settings": {
        "eyebrow": "Style grid eyebrow",
        "title": "Style grid title",
