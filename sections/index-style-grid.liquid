      },
      "blocks": [
        {
          "type": "grid-item",
          "settings": {
            "style": "Grid item 1"
          }
        },{
          "type": "grid-item",
          "settings": {
            "style": "Grid item 2"
          }
        },{
          "type": "grid-item",
          "settings": {
            "style": "Grid item 3"
          }
        },{
          "type": "grid-item",
          "settings": {
            "style": "Grid item 4"
          }
        }
      ]
    }
  ]
}
{% endschema %}
