<div class="hat-care__grid-card content-grid content-grid--1-3">
  {% for card in section.blocks %}
  <div class="content-grid__item">
    <div class="hat-care__card">
        {% include 'image_tag', image: card.settings.card_image %}
        <h4>{{ card.settings.card_title }}</h4>
        <p class="p3">{{ card.settings.card_description }}</p>
    </div>
  </div>
  {% endfor %}
</div>

{% schema %}
  {
    "name": "Hat Care Grid",
    "blocks" : [
      {
        "type": "hat_care",
        "name": "Hat Care Card",
        "settings": [
          {
            "type": "image_picker",
            "id": "card_image",
            "label": "Card image"
          },
          {
            "type": "text",
            "id": "card_title",
            "label": "Card title"
          },
          {
            "type": "textarea",
            "id": "card_description",
            "label": "Card description"
          }
        ]
      }
    ]
  }
{% endschema %}