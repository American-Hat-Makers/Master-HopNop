<script type="text/javascript">
	jQuery(document).on('page:load', function() {     
    jQuery('.product-table tr.product').each(function(index){         
      var variantId = jQuery(this).attr('data-variant-id');  
      jQuery(this).find('.product__price').append("<div class='discountDiv'><s class='orgItemPrice" + index + "'></s></div>");
    });

    jQuery('.data .lineItem').each(function(i) {
      var storePrice = jQuery(this).find('.originalPrice').text();
      var salePrice = jQuery(this).find('.salePrice').text();
      var discountPrice = parseFloat(storePrice - salePrice) ;
      
      /* Append Original Price Div */
      jQuery('.orgItemPrice'+ i).text(storePrice); 
      jQuery('.orgItemPrice'+ i).after('<span Class="savePrice">you saved $'+ discountPrice +'</span>');
      
      /* Hide if not Sale */
      if(jQuery('.orgItemPrice'+ i).text() == 0.00){ 
        jQuery('.orgItemPrice'+ i).parent('.discountDiv').remove();
      }
    });
    if((/Android|webOS|iPhone|iPad|iPod|BlackBerry|IEMobile|Opera Mini/i.test(navigator.userAgent)) || $(window).width() < 1000) {
      var thisOrderSummary = document.getElementById("order-summary");
      thisOrderSummary.classList.remove("order-summary--is-collapsed");
      thisOrderSummary.classList.add("order-summary--is-expanded");
    }
    
    // Opening phone number input field on page load
    var phoneField = document.getElementsByClassName("sms-marketing-fieldset")[0];
    var phoneCheckBox = document.getElementById("checkout_buyer_accepts_sms");
    phoneField.classList.remove("hidden");
    phoneField.setAttribute("aria-hidden",false);
    phoneCheckBox.setAttribute("checked","checked");
  });
</script>

