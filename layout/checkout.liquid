<div class="data" style="display:none">

  {% for line_item in checkout.line_items %}
          <div class="lineItem {{line_item.variant.id}}">
          <span class="quantity">{{ line_item.quantity }}</span>
          <span class="originalPrice">{{ line_item.variant.compare_at_price | times: line_item.quantity | money_without_currency | remove: ',' }}</span>
          <span class="salePrice">{{ line_item.price | times: line_item.quantity | money_without_currency | remove: ',' }}</span>
          <span class="totalPrice">{{ line_item.price | times: line_item.quantity | money_without_currency | remove: ',' }}</span>

        </div>
         
  {% endfor %}
